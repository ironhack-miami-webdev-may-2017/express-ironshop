<h2> Our Products </h2>

<ul>
  <% productsAndStuff.forEach((oneProduct) => { %>
    <li>
      <h3> <%= oneProduct.name %> </h3>
      <p> $<%= oneProduct.price %> </p>

      <a href="/products/<%= oneProduct._id %>">
        View Details
      </a>
      <br>

      <a href="/products/<%= oneProduct._id %>/edit">
        Edit Product
      </a>
      <br>

      <a href="/products/<%= oneProduct._id %>/delete">
        Delete Link (GET)
      </a>
      <br>

      <form method="post" action="/products/<%= oneProduct._id %>/delete">
        <button> Delete Button (POST) </button>
      </form>
    </li>
  <% }) %>
</ul>
